# WordMate Environment Configuration
# Copy this file to .env.local and fill in your values

# =====================================================
# Supabase Configuration (Required)
# =====================================================
# Get these from your Supabase project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key

# =====================================================
# AI Services (Required for AI features)
# =====================================================

# DeepSeek API - For word introduction generation
# Get your API key from https://platform.deepseek.com/api_keys
# Used for: Word definition, memory tips, etymology analysis
# Note: If not set, will fall back to free dictionary API
DEEPSEEK_API_KEY=your-deepseek-api-key

# OpenRouter - DeepSeek R1-0528 (Alternative, Free tier available)
# Get your API key from https://openrouter.ai/keys
# Used for: Word introduction generation, memory tips
OPENROUTER_API_KEY=your-openrouter-api-key

# Zhipu AI - GLM-4 Plus
# Get your API key from https://open.bigmodel.cn/usercenter/apikeys
# Used for: AI chat conversation, review reminders
ZHIPU_API_KEY=your-zhipu-api-key

# =====================================================
# Optional Services
# =====================================================

# Text-to-Speech Service (Word pronunciation)
# Leave empty if not using
TTS_API_URL=
TTS_API_KEY=

# Speech-to-Text Service (Voice input)
# Leave empty if not using
ASR_API_URL=
ASR_API_KEY=

# =====================================================
# Application Settings
# =====================================================
NEXT_PUBLIC_APP_NAME=WordMate
NEXT_PUBLIC_DAILY_GOAL=20

# =====================================================
# Development Settings
# =====================================================
# Set to 'true' to enable debug mode
NEXT_PUBLIC_DEBUG=false
